{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "../../",
    "baseUrl": ".",
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "paths": {
      "@governance/*": ["./*"],
      "@agents/*": ["../../packages/agents/*"]
    }
  },
  "include": ["**/*", "../../packages/agents/**/*"],
  "exclude": ["node_modules", "dist"]
}
